{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ggclaw",
  "version": "1.0.1",
  "identifier": "com.ggclaw.desktop",
  "build": {
    "beforeDevCommand": "",
    "devUrl": "http://localhost:1427",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "GoGlobal",
        "width": 1200,
        "height": 800
      }
    ],
    "withGlobalTauri": false,
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": {
      "../SKILLs": "SKILLs"
    },
    "macOS": {
      "entitlements": "entitlements.plist",
      "hardenedRuntime": true
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "endpoints": [
        "https://api.ggai.com/v1/update/check"
      ],
      "dialog": false,
      "pubkey": ""
    }
  }
}
